{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "allowJs": false,
    "types": ["react-native", "react-native-web", "jest"],
    "jsx": "react-native",
    "noImplicitAny": true,
    "moduleResolution": "Bundler",
    "target": "esnext",
    "lib": ["ESNext"],
    "paths": {
      "$assets/*": ["src/assets/*"],
      "$redux/*": ["src/redux/*"],
      "$screens/*": ["src/screens/*"],
      "$constants/*": ["src/constants/*"],
      "$helpers/*": ["src/helpers/*"],
      "$components/*": ["src/components/*"],
      "$hooks/*": ["src/hooks/*"],
      "$navigation/*": ["src/navigation/*"],
    },
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["**/node_modules", "**/Pods"]
}
